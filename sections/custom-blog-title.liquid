<link rel="stylesheet" href="{{ 'blogs.css' | asset_url }}" media="print" onload="this.media='all'">
<script src="{{ 'blog.js' | asset_url }}" defer="defer"></script>

<div class="page-width">
<h1 class="h0">{{ blog.title | escape }}</h1>
{% if blog.metafields.custom.description %}<p>{{ blog.metafields.custom.description }}</p>{% endif %}
</div>

{% schema %}
  {
    "name": "Custom blog title",
    "tag":"section",
    "class":"blog-title",
    "templates":["blog"],
    "settings": [],
    "presets":[
      {
        "name":"Custom blog title"
      }
    ]
  }
{% endschema %}
