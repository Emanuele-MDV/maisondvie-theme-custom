<div class="page-width image-{{ section.settings.image_position }} {{ section.settings.custom_class }}">
  <figure>
    {%-liquid
      assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio
      if section.settings.image != blank
        assign image_class = "banner__media-image-half"
      endif
      if section.settings.image != blank
        assign sizes = "(min-width: 750px) 50vw, 100vw"
      elsif section.settings.image != blank
        assign sizes = "50vw"
      else
        assign sizes = "100vw"
      endif
    -%}
    {{ section.settings.image | image_url: width: 1600 | image_tag:
      loading: 'lazy',
      width: section.settings.image.width,
      height: image_height,
      sizes: sizes,
      widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
      alt: section.settings.image.alt | escape
    }}
  </figure>
  <article>
    
  </article>
</div>

{% schema %}
  {
    "name": "Link Banner",
    "tag": "section",
    "class": "link-banner",
    "settings": [
      {
        "type": "text",
        "id": "custom_class",
        "label": "Add a class to your banner"
      },
      {
        "type": "select",
        "id": "image_position",
        "label": "Select the position for the image",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          },
          {
            "value": "full",
            "label": "Full (background)"
          }
        ]
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Select an image for your banner"
      }
    ],
    "presets": [
      {
        "name": "Link Banner"
      }
    ]
  }
{% endschema %}