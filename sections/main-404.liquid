<style type="text/css">
  .template-404 .title + * {
    margin-top: 1rem;
  }

  @media screen and (min-width: 750px) {
    .template-404 .title + * {
      margin-top: 2rem;
    }
  }
</style>

<div class="template-404 page-width page-margin center">
  <p>
    {{ 'templates.404.subtext' | t }}
  </p>
  <h1 class="title">
    {% if section.settings.custom_text == blank %}{{ 'templates.404.title' | t }}{% else %}{{ section.settings.custom_text }}{% endif %}
  </h1>
  <a href="{{ routes.all_products_collection_url }}" class="button">
    {{ 'general.continue_shopping' | t }}
  </a>
</div>

{% schema %}
{
  "name": "404 page settings",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "custom_text",
	  "label":"Customize the 404 message"
    },
	{
		"type":"text",
		"id":"custom_css_class",
		"label":"Add custom class?"
	}
  ]
}
{% endschema %}
