<article class="page-width narrow">

{{ article.content }}
  
</article>

{% comment %}

{% if article.metafields.custom.products_post_1.value %}

{% assign products_list_1 = article.metafields.custom.products_post_1.value %}
  
{% for product in products_list_1 %}

  <figure>
    <img
    src="{{ product.featured_image | image_url: width: '480x' }}"
    />
    <figcaption>
      
    </figcaption>
  </figure>

{% endfor %}
  
{% endif %}

{% endcomment %}

{% schema %}
  {
    "name": "Custom article content",
    "tag":"section",
    "class":"post-content",
    "templates":["article"],
    "presets": [
      {
        "name":"Custom article content"
      }
    ]
  }
{% endschema %}