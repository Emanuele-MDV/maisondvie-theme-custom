<div class="page-width {{ section.settings.section_css_class }} columns-{{ section.blocks | size }}">
  
  {% if section.settings.heading %}
  
  	<div class='standard-heading'>
      
      {% if section.settings.is_on_top_of_title == true %}

          {% if section.settings.custom_paragraph %}
              <p>{{ section.settings.custom_paragraph }}</p>
          {% endif %}

      {% endif %}
      
      <h2 class="collage-wrapper-title {{ section.settings.heading_size }}">{{ section.settings.heading | escape }}</h2>
      
      {% if section.settings.is_on_top_of_title == false %}
        
          {% if section.settings.custom_paragraph %}
              <p>{{ section.settings.custom_paragraph }}</p>
          {% endif %}
        
	  {% endif %}
      
    </div>
  
  {% endif %}
  
  {% if section.settings.is_slider == blank %}
  
    {%- for block in section.blocks -%}

      {% render 'custom-card-collection', card_collection: block.settings.collection,  media_aspect_ratio: 'adapt',  columns: 2,  extend_height: true  %}

    {% endfor %}
  
  {% endif %}
  
  
</div>

{% schema %}
{
  "name": "Custom collection collage",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Multimedia collage",
      "label": "t:sections.collage.settings.heading.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
	{

    "type": "text",
        "id": "custom_paragraph",
        "label": {
          "en": "Custom Paragraph"
        }
      },
		{
      "type": "checkbox",
      "id": "is_on_top_of_title",
      "default": false,
      "label": "Show text before title?"
    },
	{
      "type": "checkbox",
      "id": "is_slider",
      "default": false,
      "label": "Make it a slider?"
    },
	{

    "type": "text",
        "id": "section_css_class",
        "label": {
          "en": "Custom CSS Class"
        },
        "default": {
          "en": "custom-"
        }
      }
  ],
  "blocks": [
    
    {
      "type": "collection",
      "name": "t:sections.collage.blocks.collection.name",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "t:sections.collage.blocks.collection.settings.collection.label"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Custom collections list",
      "blocks": [
        
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}
